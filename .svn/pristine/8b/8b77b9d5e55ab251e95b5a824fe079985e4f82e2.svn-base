body{
	    background: #f3f3f4;
}
.wrapper-content{
	background: #fff;
	width:100%;
}
.form-group select{
	width:100%;
	/*Chrome和Firefox里面的边框是不一样的，所以复写了一下*/
 /*  border: solid 1px #999; */

  /*很关键：将默认的select选择框样式清除*/
  appearance:none;
  -moz-appearance:none;
  -webkit-appearance:none;

  /*在选择框的最右侧中间显示小箭头图片*/
 background: url("http://ourjs.github.io/static/2015/arrow.png") no-repeat scroll right center transparent;


  /*为下拉小箭头留出一点位置，避免被文字覆盖*/
  padding-right: 14px;
  line-height:34px;
  text-align:center;
  text-indent:2em;
}
.form-group option{
	text-align:center;
	line-height:34px;
	 text-indent:2em;
	   appearance:none;
  -moz-appearance:none;
  -webkit-appearance:none;
}


/*清除ie的默认选择框样式清除，隐藏下拉箭头*/
select::-ms-expand { display: none; }
.form-group_input{
	position:relative;
}
input{
	width:100%;
	line-height:34px;
  text-indent:2em;
}
input[type="checkbox"]{
	width:auto;
}
#ckeckd label{
	margin-right:10px;
}
input[type="button"]{
	width:auto;
	text-indent:0em;
	
}
.form-group_input input[type="file"]{
	position:absolute;
	top:0;
	right:0;
	left:0;
	bottom:0;
    opacity:0; 
	
}
.form-group_input img{
	border-radius: 0; 
}
.clearfix{
	clear:both;
}
.pull-cenetr{
	display:block;
	margin:auto;
}
.form-group_input img{
	width:auto;
}
.clearboth {
   clear:both;
}
.table-responsive{
	    overflow-x: inherit;
}